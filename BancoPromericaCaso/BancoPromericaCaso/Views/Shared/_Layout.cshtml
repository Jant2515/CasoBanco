<style>

    .navbar-brand img {
        max-width: 150px; 
        height: auto;
    }

    .navbar {
        background-color: #343a40; 
    }

    .navbar-dark .navbar-brand,
    .navbar-dark .nav-link {
        color: #ffffff !important;
    }

    .navbar-dark .navbar-toggler-icon {
        filter: invert(1); 
    }

    .navbar-nav {
        margin: 0 auto;
        display: flex;
        align-items: center; 
    }

        .navbar-nav .nav-item {
            margin-right: 15px; 
        }
</style>
<style>

    footer {
        background-color: rgb(0, 113, 61);
        padding: 20px 0;
        text-align: center;
        margin-top: auto;
    }

    .social-icons {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px;
    }

        .social-icons a {
            display: inline-block;
            color: #ffffff;
            margin: 0 10px;
            text-decoration: none;
            font-size: 24px;
        }

        .social-icons img {
            width: 30px; /* Set your desired fixed width for the icons */
            height: 30px; /* Set your desired fixed height for the icons */
            object-fit: cover;
            border-radius: 50%;
            transition: transform 0.3s ease-in-out;
        }

            .social-icons img:hover {
                transform: scale(1.2);
            }

       .nav-link{
         
       }

</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Banco Promerica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BancoPromericaCaso.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
</head>
<body style="display: flex; flex-direction: column; min-height: 100vh; margin: 0; padding: 0;">

    <header class="text-center mt-4">
   
    </header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <img src="/img/bc.png" alt="" class="mx-auto" style="max-width: 10%; margin-left:10px">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="citas" asp-action="Index">Citas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Reportes">Reportes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Bitacoras</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top:auto; padding:20px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color: #28a745; color: #ffffff; padding: 20px 0; text-align: center; margin-top: auto;">
        <div class="social-icons">
            <a href="#"><img src="https://img.icons8.com/color/48/000000/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="https://img.icons8.com/color/48/000000/twitter.png" alt="Twitter"></a>
            <a href="#"><img src="https://img.icons8.com/color/48/000000/google-plus.png" alt="Google Plus"></a>
            <a href="#"><img src="https://img.icons8.com/color/48/000000/linkedin.png" alt="LinkedIn"></a>
            <a href="#"><img src="https://img.icons8.com/color/48/000000/instagram-new.png" alt="Instagram"></a>
            <a href="#"><img src="https://img.icons8.com/color/48/000000/pinterest.png" alt="Pinterest"></a>
        </div>
        <p>Banco Promerica 2023 | Todos los derechos reservados. | Términos y Condiciones | Recomendaciones de Seguridad </p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
