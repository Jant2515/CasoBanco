@model Login
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Inicio de Sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PAWLunes.styles.css" asp-append-version="true" />
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: Raleway, sans-serif;
        }

        body {
            background: #fff;
        }

        .container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .screen {
            background: linear-gradient(90deg, #28a745, #79c15d);
            position: relative;
            height: 500px; /* Reducido el tamaño del formulario */
            width: 300px; /* Reducido el tamaño del formulario */
            box-shadow: 0px 0px 24px #28a745;
        }

        .screen__content {
            z-index: 1;
            position: relative;
            height: 100%;
        }

        .screen__background {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            -webkit-clip-path: inset(0 0 0 0);
            clip-path: inset(0 0 0 0);
        }

        .screen__background__shape {
            transform: rotate(45deg);
            position: absolute;
        }

        .screen__background__shape1 {
            height: 420px;
            width: 420px; 
            background: #fff;
            top: -50px;
            right: 80px; 
            border-radius: 0 72px 0 0;
        }

        .screen__background__shape2 {
            height: 180px;
            width: 180px;
            background: #79c15d;
            top: -142px;
            right: 0;
            border-radius: 32px;
        }

        .screen__background__shape3 {
            height: 450px; 
            width: 160px; 
            background: linear-gradient(270deg, #79c15d);
            top: -24px;
            right: 0;
            border-radius: 32px;
        }

        .screen__background__shape4 {
            height: 320px; 
            width: 160px; 
            background: #79c15d;
            top: 320px;
            right: 20px; 
            border-radius: 60px;
        }


        .register__submit {
            background: #fff;
            font-size: 14px;
            margin-top: 20px;
            padding: 12px 16px;
            border-radius: 22px;
            border: 1px solid #28a745;
            text-transform: uppercase;
            font-weight: 700;
            display: flex;
            align-items: center;
            justify-content: center; /* Center both horizontally and vertically */
            width: 100%;
            color: #28a745;
            box-shadow: 0px 2px 2px #28a745;
            cursor: pointer;
            transition: .2s;
            margin-right: 30px; /* Adjust the margin as needed */
        }




        .login {
            width: 240px; 
            padding: 20px; 
            padding-top: 80px; 
        }

        .login__field {
            padding: 15px 0px; 
            position: relative;
        }

        .login__icon {
            position: absolute;
            top: 20px;
            color: #28a745;
        }

        .login__input {
            border: none;
            border-bottom: 2px solid #D1D1D4;
            background: none;
            padding: 8px;
            padding-left: 24px;
            font-weight: 700;
            width: 75%;
            transition: .2s;
        }

            .login__input:active,
            .login__input:focus,
            .login__input:hover {
                outline: none;
                border-bottom-color: #79c15d;
            }

        .login__submit {
            background: rgb(0, 113, 61);
            font-size: 14px;
            margin-top: 20px;
            padding: 12px 16px;
            border-radius: 22px;
            border: 1px solid #D4D3E8;
            text-transform: uppercase;
            font-weight: 700;
            display: flex;
            align-items: center;
            justify-content: center; 
            width: 100%;
            color: #fff;
            box-shadow: 0px 2px 2px #28a745;
            cursor: pointer;
            transition: .2s;
        }


            .login__submit:active,
            .login__submit:focus,
            .login__submit:hover {
                border-color: #28a745;
                outline: none;
            }

        .button__icon {
            font-size: 20px; 
            margin-left: auto;
            color: #28a745;
        }

        .social-login {
            position: absolute;
            height: 120px;
            width: 140px; 
            text-align: center;
            bottom: 0px;
            right: 10px;
            color: #fff;
        }

        .social-icons {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .social-login__icon {
            padding: 15px 10px; 
            color: #fff;
            text-decoration: none;
            text-shadow: 0px 0px 8px #28a745;
        }

            .social-login__icon:hover {
                transform: scale(1.5);
            }

        .transform {
            transform: translateX(-50%);
        }
        #correo{
            display: block;
            width: 100%;
            padding: .375rem .75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color:#212529;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #28a745;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            border-radius: .25rem;
            transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
            min-height: calc(1.5em + 1rem + 2px);
            padding: .5rem 1rem;
            font-size: 1.25rem;
            border-radius: 40px;
        }

        #contrasena {
            display: block;
            width: 100%;
            padding: .375rem .75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #28a745;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            border-radius: .25rem;
            transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
            min-height: calc(1.5em + 1rem + 2px);
            padding: .5rem 1rem;
            font-size: 1.25rem;
            border-radius: 40px;
        }



        
    </style>

</head>
<body>
    <div class="container">
        <div class="screen">
            <div class="screen__content">
                <form asp-action="Login" class="login">
                    <h2 style="color:#28a745">Iniciar Sesion</h2>
                    <div class="login__field">
  
                        <i class="login__icon fas fa-user"></i>
                        <input asp-for="Correo" type="text" id="correo" class="correo  form-control form-control-lg" placeholder="Correo Electrónico">
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                    <div class="login__field">
                        <i class="login__icon fas fa-lock"></i>
                        <input asp-for="Contrasena" type="password" id="contrasena" class="contrasenna form-control form-control-lg" placeholder="Contrasena">
                        <span asp-validation-for="Contrasena" class="text-danger"></span>
                    </div>
                    <button class="button login__submit">
                        <span class="button__text">Iniciar Sesión</span>
                        
                    </button>
                </form>
                <div class="social-login" >
                    @Html.ActionLink("Registrar", "Register", "Login", null, new { @class = "button register__submit" })

                    <div class="social-icons">
                        <a href="https://instagram.com/isikabatay06" class="social-login__icon fab fa-instagram"></a>
                        <a href="#" class="social-login__icon fab fa-facebook"></a>
                        <a href="https://twitter.com/isikabatay06" class="social-login__icon fab fa-twitter"></a>
                    </div>
                </div>
            </div>
            <div class="screen__background">
                <span class="screen__background__shape screen__background__shape4"></span>
                <span class="screen__background__shape screen__background__shape3"></span>
                <span class="screen__background__shape screen__background__shape2"></span>
                <span class="screen__background__shape screen__background__shape1"></span>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
